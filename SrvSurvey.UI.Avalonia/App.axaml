<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SrvSurvey.UI.Avalonia.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
        
        <!-- Minimal, neutral styling on top of Fluent -->
        <Style Selector="Window">
            <Setter Property="Background" Value="#202225"/>
        </Style>

        <Style Selector="TabControl">
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="Padding" Value="10,6"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="Padding" Value="6"/>
        </Style>

        <!-- Status bar: subtle, unobtrusive -->
        <Style Selector="Border.status-bar">
            <Setter Property="Background" Value="#2b2d31"/>
        </Style>
        <Style Selector="Border.status-bar TextBlock">
            <Setter Property="Foreground" Value="#cfd2d8"/>
        </Style>
    </Application.Styles>
</Application>