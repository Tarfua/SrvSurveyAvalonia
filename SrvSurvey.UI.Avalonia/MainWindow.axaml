<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SrvSurvey.UI.Avalonia.Views"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="SrvSurvey.UI.Avalonia.MainWindow"
        Title="SrvSurvey"
        MinWidth="820" MinHeight="560"
        Icon="Assets/icons/logo.ico">
    
    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Toolbar -->
        <DockPanel Grid.Row="0" Margin="12,12,12,0" LastChildFill="False">
            <TextBlock Text="SrvSurvey" FontSize="16" FontWeight="SemiBold" DockPanel.Dock="Left"/>
            <StackPanel Orientation="Horizontal" Spacing="8" DockPanel.Dock="Right">
                <Button Content="Select Journal Folder" Click="OnSelectFolderClick"/>
                <Button Content="Exit" Click="OnExitClick"/>
            </StackPanel>
        </DockPanel>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="12">
            <TabItem Header="Logs">
                <Border CornerRadius="4" Padding="8">
                    <ScrollViewer Name="LogScrollViewer">
                        <TextBox Name="Logs"
                                 AcceptsReturn="True"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 FontFamily="Consolas,Monaco,monospace"
                                 FontSize="12"
                                 Background="Transparent"
                                 BorderThickness="0"/>
                    </ScrollViewer>
                </Border>
            </TabItem>
            
            <TabItem Header="Settings">
                <views:SettingsView Margin="8"/>
            </TabItem>
            
            <TabItem Header="Game Status">
                <Grid Margin="8" ColumnDefinitions="150,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="8">
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Connection:"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Name="TxtConnection" Text="Disconnected"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Star System:"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Name="TxtSystem" Text="Unknown"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Body:"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Name="TxtBody" Text="Unknown"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Latitude:"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Name="TxtLatitude" Text="Unknown"/>
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Longitude:"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Name="TxtLongitude" Text="Unknown"/>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Classes="status-bar" Margin="12,0,12,12" Padding="8,6">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0" Name="TxtStatus" Text="Ready" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Name="TxtTime" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
