<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SrvSurvey.UI.Avalonia.Views"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="SrvSurvey.UI.Avalonia.MainWindow"
        Title="SrvSurvey">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Select Journal Folder..." Click="OnSelectFolderClick" />
                <Separator />
                <MenuItem Header="Exit" Click="OnExitClick" />
            </MenuItem>
        </Menu>
        <TabControl>
            <TabItem Header="Logs">
                <ScrollViewer>
                    <TextBox Name="Logs" AcceptsReturn="True" IsReadOnly="True" TextWrapping="Wrap"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Settings">
                <views:SettingsView />
            </TabItem>
        </TabControl>
    </DockPanel>
 </Window>
