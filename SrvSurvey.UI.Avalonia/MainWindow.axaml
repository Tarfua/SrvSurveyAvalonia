<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SrvSurvey.UI.Avalonia.Views"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="SrvSurvey.UI.Avalonia.MainWindow"
        Title="SrvSurvey - Elite Dangerous Survey Tool"
        MinWidth="800" MinHeight="600"
        Icon="Assets/icons/logo.ico">
    
    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2d2d30" Padding="16,12">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="ðŸ“Š" FontSize="20" VerticalAlignment="Center"/>
                    <TextBlock Text="SrvSurvey" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    <Button Content="ðŸ“ Select Journal Folder" Click="OnSelectFolderClick"/>
                    <Button Content="âŒ Exit" Click="OnExitClick"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="0">
            <TabItem Header="ðŸ“‹ Game Logs">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Text="Elite Dangerous Journal Activity" 
                               FontSize="16" FontWeight="SemiBold" 
                               Margin="16,16,16,8"/>
                    <Border Grid.Row="1" Background="#252526" CornerRadius="4" Margin="16,0,16,16">
                        <ScrollViewer Name="LogScrollViewer">
                            <TextBox Name="Logs" 
                                     AcceptsReturn="True" 
                                     IsReadOnly="True" 
                                     TextWrapping="Wrap"
                                     FontFamily="Consolas,Monaco,monospace"
                                     FontSize="12"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Margin="8"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>
            
            <TabItem Header="âš™ï¸ Settings">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Text="Application Settings" 
                               FontSize="16" FontWeight="SemiBold" 
                               Margin="16,16,16,8"/>
                    <Border Grid.Row="1" Background="#252526" CornerRadius="4" Margin="16,0,16,16">
                        <views:SettingsView Margin="16"/>
                    </Border>
                </Grid>
            </TabItem>
            
            <TabItem Header="ðŸš€ Game Status">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Text="Current Game State" 
                               FontSize="16" FontWeight="SemiBold" 
                               Margin="16,16,16,8"/>
                    <Border Grid.Row="1" Background="#252526" CornerRadius="4" Margin="16,0,16,16">
                        <StackPanel Margin="16" Spacing="16">
                            <TextBlock Text="Real-time information from Elite Dangerous:" FontSize="14" Opacity="0.8"/>
                            
                            <Grid ColumnDefinitions="150,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="8">
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Connection:" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Name="TxtConnection" Text="Disconnected" Foreground="#ff6b6b"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Star System:" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Name="TxtSystem" Text="Unknown"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Body:" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Name="TxtBody" Text="Unknown"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Latitude:" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Name="TxtLatitude" Text="Unknown"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Longitude:" FontWeight="SemiBold"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Name="TxtLongitude" Text="Unknown"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Classes="status-bar" Margin="16,0,16,16" Padding="12,8">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0" Name="TxtStatus" Text="Ready" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Name="TxtTime" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
