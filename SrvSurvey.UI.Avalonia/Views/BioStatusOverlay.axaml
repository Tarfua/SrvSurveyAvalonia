<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SrvSurvey.UI.Avalonia.Views.BioStatusOverlay"
        SystemDecorations="None"
        ShowInTaskbar="False"
        Topmost="True"
        CanResize="False"
        TransparencyLevelHint="Transparent"
        Background="#00000000"
        Width="300"
        Height="120">
  <Border Background="#CC1E1E1E" CornerRadius="6" Padding="12">
    <StackPanel Spacing="6">
      <TextBlock Name="TxtHeader" Text="Bio Status" FontSize="11" Opacity="0.8"/>
      <TextBlock Name="TxtBody" Text="Unknown body" FontSize="12" Foreground="#FFFFFF"/>
      <TextBlock Name="TxtSignals" Text="Signals: 0" FontSize="11" Foreground="#00FF00"/>
      <TextBlock Name="TxtTemperature" Text="Temperature: Unknown" FontSize="11" Foreground="#FFFF00"/>
      <TextBlock Name="TxtLastScan" Text="" FontSize="10" Opacity="0.7"/>
    </StackPanel>
  </Border>
</Window>
