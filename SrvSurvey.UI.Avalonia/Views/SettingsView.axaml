<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SrvSurvey.UI.Avalonia.Views.SettingsView">
  <StackPanel Spacing="12">
    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
      <TextBox Grid.Column="0" Name="TxtFolder" IsReadOnly="True" Watermark="Select journal folder..."/>
      <Button Grid.Column="1" Content="Browse" Click="OnBrowseClick" MinWidth="100"/>
    </Grid>
    <TextBlock Name="TxtFolderStatus" FontSize="11" Opacity="0.7"/>
  </StackPanel>
</UserControl>


